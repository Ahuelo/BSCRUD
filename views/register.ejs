<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <title>R. Usuario</title>
        <meta http-equiv='X-UA-Compatible' content='IE=edge'>
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <link 
        rel="icon" 
        type="favicon/x-icon"
        href="resources/img/FAVICON.png">
        <link rel='stylesheet' type='text/css' media='screen' href='resources/css/registro_styles.css'>
    </head>

    <body>
        <!--INICIO NAV-->
        <nav id="nav">
            <div id="logo">
                <img src="resources/img/loguito.png" alt="Logotipo" title="Biscochería Sumerced">
            </div>
            <h1><a href="http://localhost:3000/inicio"><span id="first">Bizcochería</span><br><span id="end"> Sumerced</span></a></h1>
            <ul>
                <li>
                    <a href="logout" class="activos">Desconectar</a>
                </li>
                <li>
                    <a href="http://localhost:3000/registro_producto" class="activos">Registros</a>
                </li>
                <li>
                    <a href="http://localhost:3000/consultas" class="activos">Consultas</a>
                </li>
                <li>
                    <a class="seleccion">R. Usuario</a>
                </li>
            </ul>
        </nav>
        <!--FIN NAV-->

        <!--INICIO HEADER-->
        <header>
            
        </header>
        <!--FIN HEADER-->

        <div id="container"></div>

        <!--INICIO SECTION-->
        <section>
            <!--<label>Información general</label>-->
            <form id="formulario" action="/register" method="POST">

                <label>id</label>
                <input type="text" name="id" id="id" placeholder="id"/>

                <label>Usuario</label>
                <input type="email" name="user_" id="user_" placeholder="Correo Corporativo" required/>

                <label>Nombres</label>
                <input type="text" name="name_" id="name_" placeholder="Nombres" required/>

                <label>Apellidos</label>
                <input type="text" name="last_name" id="last_name" placeholder="Apellidos" required/>

                <label>Rol</label>
	            <select name="rol" id="rol" placeholder="cargo" >

                    <option value="Admin" selected>Admin</option>
                    <option value="Data entry">Data entry</option>
                    <option value="Select">Select</option>
                </select>
                
                <label>Password</label>
                <input type="text" name="pass" id="pass" placeholder="Password" required/>

                <div id="botones_es">
                    <input type="submit" value="Registrar" class="boton">
                    <input type="reset" value="Limpiar" class="boton">
                </div>
            </form>
        </section>
        <!--FIN SECTION-->

        <aside></aside>

        <!--INICIO FOOTER-->
        <footer id="register">
            <p>&copy;Todos los Derechos Reservados</p>
        </footer>
        <!--FIN FOOTER-->

<!-- EL sWEETALERT2 PARA VENTANAS EMERGENTES-->

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<% if (typeof alert !='undefined') { %>
    <script>
        swal.fire({
            title:'<%= alertTitle %>',
            text:'<%= alertMessage %>',
            icon:'<%= alerticon %>',
            showConfirmButton: <%= showConfirmButton %>,
            timer: <%= timer %>
        }).then(()=>{
            window.location='/<%= ruta %>'
        })
        </script>
<% } %>


    </body>
</html>